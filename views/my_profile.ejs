/* Profile Modal Content Form Styles */
.profileHeader .modalContent form {
    display: flex;
    flex-direction: column;
}

.profileHeader .modalContent form label {
    margin-bottom: 5px;
    font-weight: bold;
}

.profileHeader .modalContent form input[type="text"],
.profileHeader .modalContent form select {
    padding: 10px;
    margin-bottom: 15px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.profileHeader .modalContent form button {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
}

.profileHeader .modalContent form button:hover {
    background-color: #45a049;
}

/* Focus Styles for Profile Form */
.profileHeader .modalContent form input[type="text"]:focus,
.profileHeader .modalContent form select:focus {
    border-color: #4CAF50; /* Change border color to green on focus */
    outline: none; /* Remove default outline */
    box-shadow: 0 0 5px rgba(76, 175, 80, 0.5); /* Subtle shadow effect */
}

/* Active State for Profile Button */
.profileHeader .modalContent form button:active {
    background-color: #388e3c; /* Darker green when button is pressed */
}


/* Responsive Design */
@media (max-width: 768px) {
    .profileHeader {
        flex-direction: column;
        align-items: center;
    }

    .profileDetails {
        margin-left: 0;
        text-align: center;
    }

    #photoOverlay .overlayContent {
        align-items: center;
    }
}


/* Responsive Design */
@media (max-width: 768px) {
    .skillsRow, .showcaseGrid {
        flex-direction: column;
    }

    .skillItem, .showcaseItem {
        width: 100%;
    }

    .modalContent {
        width: 90%;
    }
}

